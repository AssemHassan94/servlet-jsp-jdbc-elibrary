		<url-pattern>/login</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>home</servlet-name>
		<jsp-file>/jsp/main.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>addbook</servlet-name>
		<jsp-file>/jsp/add-book.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>addbook</servlet-name>
		<url-pattern>/add-book</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>updatebook</servlet-name>
		<jsp-file>/jsp/update-book.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
